<div class="px-5 mx-5">    
    <%# build exceptions: like no post was submitted %>
    <h1 class="mb-3">Add Post</h1>
    <%# build the form to create new posts %>
<%= form_with model: [@current_user, @post], url: user_posts_path do |f| %>
    <div class="form-group mb-3">
        <%= f.label :title %>
        <%= f.text_field :title, class: 'form-control' %>
            <% if @post.errors.has_key?(:title) %>
      <div class="text-danger" style="color: red;"><%= @post.errors.full_messages_for(:title).join(', ') %></div>
    <% end %>
    </div>
    <div class="form-group mb-3">
        <%= f.label :text %>
        <%= f.text_area :text, size: "70x5", class: 'form-control' %>
           <% if @post.errors.has_key?(:text) %>
      <div class="text-danger" style="color: red;"><%= @post.errors.full_messages_for(:text).join(', ') %></div>
    <% end %>
    </div>
    <%= f.submit class: 'btn btn-dark text-warning' %>
    <% end %>
</div>