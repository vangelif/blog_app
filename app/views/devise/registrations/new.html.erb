<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card shadow">
        <div class="card-body">

<h2 class="text-center">Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="mb-1">
      <%= f.label :name, class: "form-label" %>
      <%= f.text_field :name, class: "form-control", placeholder: "Enter your name", id: "exampleInputEmail1", "aria-describedby" => "emailHelp" %>
    </div>

      <div class="mb-1">
      <%= f.label :bio, class: "form-label" %>
      <%= f.text_field :bio, class: "form-control", placeholder: "Write key moments of your life", id: "exampleInputEmail1", "aria-describedby" => "emailHelp" %>
    </div>

      <div class="mb-1">
      <%= f.label :photo, class: "form-label" %>
      <%= f.url_field :photo, class: "form-control", placeholder: "Choose the unfiltered one!", id: "exampleInputEmail1", "aria-describedby" => "emailHelp" %>
    </div>

    <div class="mb-1">
      <%= f.label :email, class: "form-label" %>
      <%= f.email_field :email, class: "form-control", placeholder: "We'll never share your email with anyone else.", id: "exampleInputEmail1", "aria-describedby" => "emailHelp" %>
    </div>

<div class="mb-1">
  <%= f.label :password, class: "form-label" %>
  <% if @minimum_password_length %>
    <%= f.password_field :password, class: "form-control", placeholder: "Enter your password (minimum #{@minimum_password_length} characters)", id: "exampleInputPassword1" %>
  <% else %>
    <%= f.password_field :password, class: "form-control", placeholder: "Enter your password", id: "exampleInputPassword1" %>
  <% end %>
</div>


        <div class="mb-1">
      <%= f.label :password_confirmation, class: "form-label" %>
      <%= f.password_field :password_confirmation, class: "form-control", id: "exampleInputPassword1" %>
    </div>

    <div class="mb-1 form-check">
      <%= f.check_box :remember_me, class: "form-check-input", id: "exampleCheck1" %>
      <%= f.label :remember_me, class: "form-check-label", for: "exampleCheck1" do %>
        Remember me
      <% end %>
    </div>
<div class="text-center">
    <button type="submit" class="btn btn-warning my-2">Submit</button>
 </div>
<% end %>
<div class="text-center">
  
<%= render "devise/shared/links" %>
  </div>
        </div>
      </div>
    </div>
  </div>
</div>
